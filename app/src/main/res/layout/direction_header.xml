<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#C51586"
    android:paddingTop="28dp"
    android:paddingBottom="6dp"
    android:clickable="true"
    android:id="@+id/direction_header_main_layout">


    <ImageButton
        android:id="@+id/direction_header_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="@dimen/square_button_padding"
        android:paddingLeft="@dimen/square_button_padding"
        android:background="@color/transparent"
        android:tint="@color/md_white_1000"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:padding="6dp"
                app:srcCompat="@drawable/ic_adjust_black_24dp"
                android:tint="@color/md_white_1000"/>

            <EditText
                android:id="@+id/direction_header_from_text"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:ems="10"
                android:layout_weight="1"
                android:hint="@string/choose_from"
                android:background="@drawable/rounded_corner"
                android:layout_gravity="center_vertical"
                android:inputType="textNoSuggestions|text"
                android:maxLines="1"
                android:textSize="16sp"
                android:gravity="center_vertical"/>

            <ImageButton
                android:id="@+id/direction_header_swap_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                app:srcCompat="@drawable/ic_swap_vert_black_24dp"
                android:tint="@color/md_white_1000"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/transparent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:padding="6dp"
                app:srcCompat="@drawable/ic_location_on_black_24dp"
                android:tint="@color/md_white_1000"/>

            <EditText
                android:id="@+id/direction_header_to_text"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:hint="@string/choose_to"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_corner"
                android:inputType="textNoSuggestions|text"
                android:maxLines="1"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"/>


            <ImageButton
                android:id="@+id/direction_header_accessibility_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                app:srcCompat="@drawable/ic_accessible_black_24dp"
                android:tint="@color/md_white_1000"
                android:background="@color/transparent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>